            <ImageButton
                android:id="@+id/IB_zapato4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/zapato4" />

            <ImageButton
                android:id="@+id/IB_zapato3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/zapato3" />

            <ImageButton
                android:id="@+id/IB_zapato1"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:backgroundTint="@color/white"
