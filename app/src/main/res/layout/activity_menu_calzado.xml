                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:onClick="Info1"
                app:srcCompat="@drawable/zapatooo" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>